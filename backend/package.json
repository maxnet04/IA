{
  "name": "suat-ia-backend",
  "version": "1.0.0",
  "description": "Backend do SUAT IA com funcionalidades de anÃ¡lise preditiva",
  "main": "src/server.js",
  "bin": "src/server.js",
  "pkg": {
    "targets": ["node16-win-x64"],
    "outputPath": "dist",
    "assets": [
      "src/**/*",
      "node_modules/sqlite3/**/*"
    ],
    "scripts": [
      "src/**/*.js"
    ],
    "options": [
      "experimental-modules"
    ]
  },
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "dev:win": "nodemon .\\src\\server.js",
    "test": "jest",
    "build": "pkg . --output suat-backend-new.exe && if exist suat-backend.exe del suat-backend.exe && ren suat-backend-new.exe suat-backend.exe && if not exist data mkdir data && copy data\\database.sqlite data\\database.sqlite >nul 2>&1"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "json2csv": "^6.0.0-alpha.2",
    "jsonwebtoken": "^9.0.2",
    "sqlite3": "^5.1.6",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "axios": "^1.9.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "pkg": "^5.8.1"
  }
}
